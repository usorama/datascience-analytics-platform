# QVF Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=false
NODE_ENV=production

# Security (CRITICAL: Change these in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production-use-256-bit-key
REDIS_PASSWORD=qvf-redis-strong-password-change-this

# API Configuration
QVF_API_URL=http://qvf-api:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=sqlite:///./data/qvf.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://username:password@qvf-postgres:5432/qvf_db

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3006,http://localhost:3000,http://qvf-web:3006

# Azure DevOps Integration (Optional)
ADO_ORGANIZATION=your-ado-organization
ADO_PROJECT=your-ado-project
ADO_PAT_TOKEN=your-personal-access-token

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@qvf-redis:6379/0

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Performance Tuning
UVICORN_WORKERS=4
MAX_CONNECTIONS=1000

# SSL Configuration (for production with nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
{
  "name": "qvf-platform",
  "version": "0.1.0",
  "description": "QVF Platform - Quality Value Framework for Agile Teams",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:web\"",
    "dev:web": "pnpm --filter @qvf/web dev",
    "dev:api": "cd apps/api && PYTHONPATH=src python3 -m uvicorn qvf_api.main:app --reload --port 8000",
    "build": "pnpm --filter @qvf/web build",
    "build:types": "pnpm --filter @qvf/shared-types build",
    "lint": "pnpm --filter @qvf/web lint",
    "typecheck": "pnpm --filter @qvf/web typecheck",
    "test": "pnpm --recursive test",
    "test:e2e": "./scripts/run-tests.sh all",
    "test:e2e:smoke": "./scripts/run-tests.sh smoke",
    "test:e2e:auth": "./scripts/run-tests.sh auth",
    "test:e2e:dashboard": "./scripts/run-tests.sh dashboard",
    "test:e2e:qvf": "./scripts/run-tests.sh qvf",
    "test:e2e:work-items": "./scripts/run-tests.sh work-items",
    "test:e2e:comparison": "./scripts/run-tests.sh comparison",
    "test:e2e:visual": "./scripts/run-tests.sh visual",
    "test:e2e:performance": "./scripts/run-tests.sh performance",
    "test:e2e:mobile": "./scripts/run-tests.sh mobile",
    "test:e2e:api": "./scripts/run-tests.sh api",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "./scripts/run-tests.sh smoke chromium false",
    "test:e2e:debug": "./scripts/run-tests.sh auth chromium false true",
    "test:e2e:docker": "./scripts/test-docker.sh smoke",
    "test:playwright": "playwright test",
    "screenshots": "playwright test tests/qvf-screenshots.spec.ts",
    "clean": "pnpm --recursive clean",
    "install:api": "cd apps/api && pip install -r requirements.txt",
    "install:sync": "cd services/ado-sync && pip install -r requirements.txt"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^20.14.10",
    "concurrently": "^8.2.2",
    "playwright": "^1.54.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}